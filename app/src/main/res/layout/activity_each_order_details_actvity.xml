<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbOrderDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/black"
        android:background="@color/white"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Orders"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.30dp"
        android:background="#DAD4D4"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbOrderDetailFragment"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvorderStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.00dp"
        android:elevation="0dp"
        app:cardCornerRadius="7.80dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="6.50dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="39.00dp"
                android:layout_height="39.00dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/baseline_backpack_24"
                app:tint="#DDDDDD" />

            <View
                android:id="@+id/view1"
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                android:layout_gravity="center_vertical"
                android:background="#6B6464" />

            <ImageView
                android:id="@+id/iv2"

                android:layout_width="39.00dp"
                android:layout_height="39.00dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/baseline_shopping_bag_24"
                app:tint="#DDDDDD" />

            <View
                android:id="@+id/view2"
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                android:layout_gravity="center_vertical"
                android:background="#6B6464" />

            <ImageView
                android:id="@+id/iv3"

                android:layout_width="39.00dp"
                android:layout_height="39.00dp"
                android:layout_gravity="center"

                android:background="@drawable/bg_circle"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/baseline_electric_rickshaw_24"
                app:tint="#DDDDDD" />

            <View
                android:id="@+id/view3"
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                android:layout_gravity="center_vertical"
                android:background="#6B6464" />

            <ImageView
                android:id="@+id/iv4"

                android:layout_width="39.00dp"
                android:layout_height="39.00dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/baseline_done_outline_24"
                app:tint="#DDDDDD" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardCornerRadius="7.80dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvorderStatus">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13.00dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/ivProdudctImage"
                android:layout_width="39.00dp"
                android:layout_height="52.00dp"
                android:layout_weight="0.5"
                android:padding="3.90dp"
                />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5.20dp"
                android:layout_weight="2.4"
                android:orientation="vertical"
                android:weightSum="3">


                <TextView
                    android:id="@+id/tvProductTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Title"
                    android:textSize="13.00dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvProductCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="40ltr"
                    android:textSize="13.00dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="â‚¹50"
                    android:textSize="13.00dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvProductSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Size"
                    android:textSize="13.00dp"
                    android:textColor="@color/black"/>







            </LinearLayout>


            <LinearLayout

                android:id="@+id/llProductCount"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="30dp"
                android:layout_weight="0.1"
                android:background="@drawable/bg_product_count"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">




                <TextView
                    android:id="@+id/tvProductCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="19.50dp"/>


















            </LinearLayout>











        </LinearLayout>


    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>